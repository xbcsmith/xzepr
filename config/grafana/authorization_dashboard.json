{
  "dashboard": {
    "id": null,
    "uid": "xzepr-authorization",
    "title": "XZepr Authorization Metrics",
    "tags": ["xzepr", "authorization", "opa", "rbac"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "Authorization Request Rate",
        "targets": [
          {
            "expr": "rate(xzepr_opa_authorization_requests_total[5m])",
            "legendFormat": "{{decision}} - {{resource_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "Authorization Denial Rate",
        "targets": [
          {
            "expr": "rate(xzepr_opa_authorization_denials_total[5m])",
            "legendFormat": "{{resource_type}} - {{action}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Denials/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        },
        "alert": {
          "name": "High Authorization Denial Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "graph",
        "title": "Authorization Latency P95",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(xzepr_opa_authorization_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{resource_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(xzepr_opa_authorization_duration_seconds_bucket[5m]))",
            "legendFormat": "P99 - {{resource_type}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.50, rate(xzepr_opa_authorization_duration_seconds_bucket[5m]))",
            "legendFormat": "P50 - {{resource_type}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        },
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        },
        "alert": {
          "name": "High Authorization Latency",
          "conditions": [
            {
              "evaluator": {
                "params": [0.5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "type": "graph",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "rate(xzepr_opa_cache_hits_total[5m]) / (rate(xzepr_opa_cache_hits_total[5m]) + rate(xzepr_opa_cache_misses_total[5m]))",
            "legendFormat": "{{resource_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "Hit Rate",
            "max": 1,
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "type": "graph",
        "title": "Fallback to Legacy RBAC Rate",
        "targets": [
          {
            "expr": "rate(xzepr_opa_fallback_total[5m])",
            "legendFormat": "{{reason}} - {{resource_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Fallbacks/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        },
        "alert": {
          "name": "High Fallback Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "type": "graph",
        "title": "Circuit Breaker State",
        "targets": [
          {
            "expr": "xzepr_opa_circuit_breaker_state",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "State (0=closed, 1=open, 2=half-open)",
            "max": 2,
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        },
        "thresholds": [
          {
            "value": 1,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 24
        },
        "type": "singlestat",
        "title": "Total Authorization Requests",
        "targets": [
          {
            "expr": "sum(xzepr_opa_authorization_requests_total)",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current",
        "sparkline": {
          "show": true,
          "full": true,
          "lineColor": "rgb(31, 120, 193)"
        }
      },
      {
        "id": 8,
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 24
        },
        "type": "singlestat",
        "title": "Total Denials",
        "targets": [
          {
            "expr": "sum(xzepr_opa_authorization_denials_total)",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current",
        "sparkline": {
          "show": true,
          "full": true,
          "lineColor": "rgb(255, 120, 10)"
        },
        "colorBackground": false,
        "colorValue": true,
        "thresholds": "100,1000"
      },
      {
        "id": 9,
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 24
        },
        "type": "singlestat",
        "title": "Current Cache Hit Rate",
        "targets": [
          {
            "expr": "sum(rate(xzepr_opa_cache_hits_total[5m])) / (sum(rate(xzepr_opa_cache_hits_total[5m])) + sum(rate(xzepr_opa_cache_misses_total[5m])))",
            "refId": "A"
          }
        ],
        "format": "percentunit",
        "valueName": "current",
        "sparkline": {
          "show": true,
          "full": true,
          "lineColor": "rgb(50, 172, 45)"
        },
        "colorBackground": false,
        "colorValue": true,
        "thresholds": "0.5,0.8"
      },
      {
        "id": 10,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 30
        },
        "type": "table",
        "title": "Authorization Decisions by Resource Type",
        "targets": [
          {
            "expr": "sum by (resource_type, decision) (xzepr_opa_authorization_requests_total)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "styles": [
          {
            "pattern": "Time",
            "type": "hidden"
          },
          {
            "pattern": "resource_type",
            "type": "string",
            "alias": "Resource Type"
          },
          {
            "pattern": "decision",
            "type": "string",
            "alias": "Decision"
          },
          {
            "pattern": "Value",
            "type": "number",
            "alias": "Total Requests",
            "decimals": 0
          }
        ],
        "transform": "table"
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          },
          "hide": 0
        },
        {
          "name": "resource_type",
          "type": "query",
          "query": "label_values(xzepr_opa_authorization_requests_total, resource_type)",
          "datasource": "$datasource",
          "refresh": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}
